{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run ARK Operator",
            "type": "debugpy",
            "request": "launch",
            "module": "ark_operator",
            "justMyCode": false,
        },
        {
            "name": "Run Kopf",
            "type": "debugpy",
            "request": "launch",
            "module": "kopf",
            "args": [
                "run",
                "-n",
                "ark-dev",
                "--verbose",
                "--standalone",
                "-m",
                "ark_operator.handlers"
            ],
            "justMyCode": false,
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "-n=0 --no-cov -vv"
            }
        },
    ]
}
